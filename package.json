{
  "name": "@truelist/react",
  "version": "0.1.0",
  "description": "React hooks and components for Truelist.io email validation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Truelist-io-Email-Validation/truelist-react.git"
  },
  "homepage": "https://truelist.io",
  "bugs": {
    "url": "https://github.com/Truelist-io-Email-Validation/truelist-react/issues"
  },
  "keywords": [
    "react",
    "email",
    "validation",
    "truelist",
    "email-validation",
    "form-validation",
    "hooks"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./zod": {
      "import": {
        "types": "./dist/zod.d.ts",
        "default": "./dist/zod.js"
      },
      "require": {
        "types": "./dist/zod.d.cts",
        "default": "./dist/zod.cjs"
      }
    },
    "./react-hook-form": {
      "import": {
        "types": "./dist/react-hook-form.d.ts",
        "default": "./dist/react-hook-form.js"
      },
      "require": {
        "types": "./dist/react-hook-form.d.cts",
        "default": "./dist/react-hook-form.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts,.tsx",
    "ci": "yarn typecheck && yarn lint",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "react-hook-form": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "zod": "^3.22.0",
    "react-hook-form": "^7.50.0"
  }
}
